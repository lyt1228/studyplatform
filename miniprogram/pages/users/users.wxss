/* miniprogram/pages/users/users.wxss */
.header {
    height: 320rpx;
    text-align: left;
    box-sizing: border-box;   
    background: #fff;
    padding: 28rpx 0 28rpx  20rpx;
    border-bottom: 2rpx solid #ddd;
}
.header image{
    width: 200rpx;
    height: 200rpx;
    margin-right: 24rpx;
    display: inline-block;
    border-radius:50%; 
}
.header .info{
    display: inline-block;
    position: relative;
    bottom: 16rpx;
    top: 20rpx;
    margin-left:8rpx; 
}
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}
 
.modalDlg{
    width: 80%;
    height: 80%;
    position: fixed;
    top:10%;
    left: 10%;
    z-index: 9999;
   
    background-color: #fff;
    
    display: flex;
    flex-direction: column;
    align-items: center;
}
input{
  border: 1rpx solid #ccc;
  margin-bottom:20rpx; 
}

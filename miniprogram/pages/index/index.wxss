/**index.wxss**/

.selection{
  width:100%;
  height: 100%;
  border-bottom: 10rpx solid #ddd;


}

.list-item{
  height:450rpx;
  width: 100%;
  background-color:rgb(245, 245, 245);
  border-bottom: 6rpx solid #ddd;
  position: relative;
  zoom: 1;
  overflow: hidden;
  
}
.list-item-images{
   height: 170rpx;
   width: 170rpx;
   position: relative;
   left: 10px;
   top:15px;
   float: left;

}

.list-item-images-img{
   height: 100%;
   width: 100%;
}
.list-item-text{
  height: 100%;
  width:70%;
  position: relative;
  float: right;
  top: 15rpx;
  right: 15rpx;
  
  

}
.list-item-text-content{
  font-size:12px;
  width:100%;
  
}

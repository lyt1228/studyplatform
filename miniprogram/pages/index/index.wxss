/**index.wxss**/

.selection{
  width:100%;
  height: 100%;
  border-bottom: 10rpx solid #ddd;
}

.list-item{
  display: inline-block;
  height:100%;
  width: 100%;
  background-color:rgb(245, 245, 245);
  border-bottom: 6rpx solid #ddd;
  position: relative;
  zoom: 1;
  overflow: hidden;
  
}
.list-item-images{
   display: block;
   height: 170rpx;
   width: 170rpx;
   position: relative;
   margin: 20rpx;
   float: left;
   top:30rpx;
   border: 1rpx solid #ddd;
}

.list-item-images-img{
   height: 100%;
   width: 100%;
}
.list-item-text{
  display: inline-block;
  width:70%;
  position: relative;
}
.list-item-text-content{
  font-size:12px;
  width:100%;
  
}

.filelist{
  width: 350rpx;
  height: 350rpx;
  /* border: 1rpx solid #ddd;
   */
  position: relative;
  top: 20rpx;
  left: 20rpx;                                                                       display: inline-block;                                                             margin-right:5rpx;     
  justify-content: center;
}
         
.fileimg{
  width: 280rpx;
  height: 280rpx;
  position: relative;
  top: 20rpx;
  left: 35rpx;
  justify-content: center;
}
.filetitle{
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.3;
}

.modalDlg{
    width: 80%;
    
    position: fixed;
    top:5%;
    left: 10%;
    z-index: 9999;
   
    background-color: #fff;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}